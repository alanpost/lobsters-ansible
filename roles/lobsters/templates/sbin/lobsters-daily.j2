#!/bin/bash

err=0
report() {
  err=1
  echo -n "error at line ${BASH_LINENO[0]}, in call to "
  sed -n ${BASH_LINENO[0]}p $0
} >&2
trap report ERR

cd /srv/lobste.rs/http
export RAILS_ENV={{ env }}

if [ -f public/maintenance.html ];
then
  exit 0
fi

/usr/local/bin/bundle exec rake sitemap:refresh -s

exit $err
